---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);

// the posts are displayed in a grid layout, with 3 columns depending on the screen size
// each post has the same height, if there is more text than the other posts, the text will be cut off
---

<BaseLayout>
  <section class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 mt-4 gap-y-8">
    {
      posts.map((post) => (
        <a href={`/blog/${post.slug}/`}>
          <div class="border border-gray-200 rounded-md p-4 h-full">
            <FormattedDate date={post.data.pubDate} />
            <h2>{post.data.title}</h2>
            <p class="text-gray-500 line-clamp-3">
              {post.data.description}
            </p>
          </div>
        </a>
      ))
    }
  </section>
</BaseLayout>

<style>
  h2 {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0.5rem 0;
  }
</style>
